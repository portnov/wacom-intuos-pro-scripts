name:                xmonad-wacom
version:             0.2.0.0
synopsis:            XMonad module for automatic switching of Wacom tablet settings profiles
description:         This package allows to automatically switch Wacom tablet settings profiles.
                     This can use KDE kcm_wacomtablet features or wacom-daemon package.
homepage:            https://github.com/portnov/wacom-intuos-pro-scripts
license:             BSD3
license-file:        LICENSE
author:              Ilya Portnov
maintainer:          portnov84@rambler.ru
-- copyright:           
category:            Desktop
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     XMonad.Wacom,
                       XMonad.Wacom.Kde,
                       XMonad.Wacom.Daemon
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4,
                       template-haskell,
                       dbus >= 1.2,
                       dbus-th >= 0.1.3.0,
                       syb,
                       xmonad, xmonad-contrib,
                       wacom-daemon
  -- hs-source-dirs:      
  default-language:    Haskell2010

